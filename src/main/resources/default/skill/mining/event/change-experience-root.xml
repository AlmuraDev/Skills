<?xml version="1.0" encoding="utf-8"?>
<droplet xmlns:skills="skills" spec="1.0.0">
  <skill>
    <event>
      <change-experience>
        <root>
          <filter-apply>
            <apply>
              <if filter="player">
              <then>
                <message key="action_bar" text="+ {exp-diff}xp (`b{name}`r)"/>
              </then>
            </apply>
          </filter-apply>
        </root>
      </change-experience>
    </event>
  </skill>
</droplet>
