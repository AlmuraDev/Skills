<?xml version="1.0" encoding="utf-8"?>
<droplet xmlns:skills="skills" spec="1.0.0">
  <filters>
    <skills:player id="player"/>
    <all id="player-not-sneaking">
      <filter id="player"/>
      <skills:data key="sponge:is_sneaking" value="false"/>
    </all>
    <all id="player-not-sneaking-level-99">
      <filter id="player-not-sneaking"/>
      <skills:level op="equals" value="99"/>
    </all>
    <all id="player-survival">
      <filter id="player"/>
      <skills:data key="sponge:gamemode" value="minecraft:survival"/>
    </all>
  </filters>
</droplet>
